<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_app_view_space"
    android:background="?selectableItemBackground"
    >

    <TextView
        android:id="@+id/item_tv_color_title"
        android:text="COLOR"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/item_tv_color_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_color_title"
        app:layout_constraintStart_toStartOf="@id/item_tv_color_title"
        app:layout_constraintLeft_toLeftOf="@id/item_tv_color_title"
        android:layout_marginTop="@dimen/dim_app_view_space"
        />

    <TextView
        android:id="@+id/item_tv_size_title"
        android:text="SIZE"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dim_app_view_space"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_color_value"
        app:layout_constraintStart_toStartOf="@id/item_tv_color_title"
        app:layout_constraintLeft_toLeftOf="@id/item_tv_color_title"
        />

    <TextView
        android:id="@+id/item_tv_size_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_size_title"
        app:layout_constraintStart_toStartOf="@id/item_tv_size_title"
        app:layout_constraintLeft_toLeftOf="@id/item_tv_size_title"
        android:layout_marginTop="@dimen/dim_app_view_space"
        />

    <TextView
        android:id="@+id/item_tv_price_title"
        android:text="PRICE"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dim_app_view_space"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_size_value"
        app:layout_constraintStart_toStartOf="@id/item_tv_color_title"
        app:layout_constraintLeft_toLeftOf="@id/item_tv_color_title"
        />

    <TextView
        android:id="@+id/item_tv_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_price_title"
        app:layout_constraintStart_toStartOf="@id/item_tv_price_title"
        app:layout_constraintLeft_toLeftOf="@id/item_tv_price_title"
        android:layout_marginTop="@dimen/dim_app_view_space"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_price_value"
        android:layout_marginTop="@dimen/dim_app_view_space"
        android:padding="@dimen/dim_app_view_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>